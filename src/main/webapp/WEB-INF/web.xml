<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	id="WebApp_ID" version="2.5">
	<display-name>wxserver</display-name>
	<servlet>
		<display-name>WxApiServlet</display-name>
		<servlet-name>WxApiServlet</servlet-name>
		<servlet-class>cn.saymagic.weixin.server.servlet.WxApiServlet</servlet-class>
	</servlet>
	<servlet>
		<display-name>WxApiGetIp</display-name>
		<servlet-name>WxApiGetIp</servlet-name>
		<servlet-class>cn.saymagic.weixin.server.servlet.GetWeixinIP</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>WxApiServlet</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
		<servlet-mapping>
		<servlet-name>WxApiGetIp</servlet-name>
		<url-pattern>/ip</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
</web-app>